<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Searchable Table</title>

    <style>
      .container {
        margin-top: 20px;
        text-align: center;
      }

      table {
        margin-bottom: 20px;
      }
    </style>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="input-group mb-3">
            <input
              type="text"
              class="form-control"
              placeholder="Search"
              id="myInput"
            />
          </div>

          <table class="table table-striped table-hover" id="MyTable">
            <thead>
              <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col">Insurance</th>
              </tr>
            </thead>
            <tbody id="tableBody"></tbody>
          </table>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      $("#myInput").on("keyup", function () {
        var searchText = $(this).val();

        // Send an AJAX request to the API endpoint
        $.ajax({
          url: "http://localhost:8080/patient",
          method: "GET",
          data: {
            searchTerm: searchText,
          },
          success: function (response) {
            console.log(response);
            let tableBody = document.getElementById("tableBody");
            tableBody.innerHTML = "";

            // Clear the existing table rows
            // $("#myTable tbody").empty();

            // Populate the table with data from the API response
            for (var i = 0; i < response.data.length; i++) {
              var patient = response.data[i];
              console.log(patient.firstName);
              const row = document.createElement("tr");
              // add first name
              const firstNameTd = document.createElement("td");
              firstNameTd.innerHTML = patient.firstName;
              row.append(firstNameTd);
              // add last name
              const lastNameTd = document.createElement("td");
              lastNameTd.innerHTML = patient.lastName;
              row.append(lastNameTd);
              // add email
              const emailTd = document.createElement("td");
              emailTd.innerHTML = patient.email;
              row.append(emailTd);
              // add phone
              const phoneTd = document.createElement("td");
              phoneTd.innerHTML = patient.phone;
              row.append(phoneTd);
              // add address
              const addressTd = document.createElement("td");
              addressTd.innerHTML = patient.address;
              row.append(addressTd);
              // add insurance
              const insuranceTd = document.createElement("td");
              insuranceTd.innerHTML = patient.insurance.name;
              row.append(insuranceTd);
              tableBody.appendChild(row);
            }
            //   var row = "<tr>";
            //   row += "<td>" + patient.id + "</td>";
            //   row += "<td>" + patient.firstName + "</td>";
            //   row += "<td>" + patient.lastName + "*-+</td>";
            //   row += "<td>" + patient.email + "</td>";
            //   row += "</tr>";
            //   $("#myTable tbody").append(row);
            // }
          },
        });
      });
    </script>
  </body>
</html>
